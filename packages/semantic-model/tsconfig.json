{
  "compileOnSave": true,
  "compilerOptions": {
    "rootDir": "./src",
    "module": "commonjs",
    "lib": ["es7"],
    "target": "es2017",
    "outDir": "./lib",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true
  },
  "include": ["src/**/*", "api.d.ts"]
}
